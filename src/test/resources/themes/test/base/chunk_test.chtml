{!---------------------------------------------}
{#tree_test}
{.exec #print_x json}
{"x":
 {"name":"Bond",
  "codename":"007",
  "films":[{"name":"Goldfinger",
            "year":"1964",
            "actor":"Connery"},
           {"name":"Casino Royale",
            "year":"2006",
            "actor":"Craig"}],
  "enemies":[]
  }
}
{/exec}
{#}

{#print_x}
  {.if ($x|type == 'OBJECT') }
{.exec #print_obj}{$obj=}{$x}{=}{/exec}
  {.elseIf ($x|type == 'LIST') }
{.exec #print_list}{$list=}{$x}{=}{/exec}
  {.else}
{$x}{/if}{#}

{#print_obj}
{.loop in $obj as $key:$val}
<dt>{$key}</dt>
  <dd>{.exec #print_x}{$x=}{$val}{=}{/exec}</dd>
{.onEmpty}<i>[no attrs]</i>
{/loop}
{#}

{#print_list}
<ul>
{.loop in $list as $item}
 <li>{.exec #print_x}{$x=}{$item}{=}{/exec}</li>
{.onEmpty}
 <li><i>Empty List</i></li>
{/loop}
</ul>
{#}

